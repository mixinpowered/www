---
import { getMembers } from '@services/octokit'
const members = await getMembers()
---

<div class="grid grid-cols-6 gap-5">
  {
    members.map(({ avatar, username, url }) => (
      <a
        href={url}
        target="_blank"
        class="flex flex-col items-center gap-2 duration-300 hover:scale-105"
      >
        <img src={avatar} alt={username} class="w-36 h-auto rounded-full" />
        <span>{username}</span>
      </a>
    ))
  }
</div>
